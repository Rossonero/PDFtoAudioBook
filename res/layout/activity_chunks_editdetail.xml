 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    >

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@android:style/ButtonBar">
        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onPlayClick"
            android:text="Play Sample" />
        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onSaveClick"
            android:text="Save" />
        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onDiscardClick"
            android:text="Discard" />
    </LinearLayout>


<TextView 
	android:id="@+id/ChunkTitleLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Title:"
	/>
<EditText 
	android:id="@+id/ChunkTitle"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex Section 1.1"
	/>
	
<TextView 
	android:id="@+id/ChunkTextLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Text:"
	/>
<EditText 
	android:id="@+id/ChunkText"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex Section 1.1\n In this section we will provide a brief history of pumpkins and their squash cousins. The pumpkin was first documented in..."
	/>

	
<TextView 
	android:id="@+id/ChunkHistoryLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Chunk History:"
	/>
<EditText 
	android:id="@+id/ChunkHistory"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex Created 20100101\nSection 1.1\n In this section we will provide a brief history of pumpkins and their squash cousins. 
	The pumpkin was first documented in...\n\n
	Edited 20100101:Section 1.1\n In this section we will provide a brief history of pumpkins, and their squash cousins. 
	The pumpkin was first documented in..."
	/>
	
<TextView 
	android:id="@+id/ChunkCorrectionsLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Corrections:"
	/>
<EditText 
	android:id="@+id/ChunkCorrections"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex (CHAPTEr->Chapter)"
	/>
	
<TextView 
	android:id="@+id/ChunkListenedToDateLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Last listened to:"
	/>
<EditText 
	android:id="@+id/ChunkListenedToDate"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex 2000-01-01"
	/>
	
	<TextView 
	android:id="@+id/audiobookClassificationLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Last Generated:"
	/>	
<EditText 
	android:id="@+id/ChunkGeneratedDate"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex 2000-01-01"
	/>
<TextView 
	android:id="@+id/audiobookTitleLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="AudioBook's Title:"
	/>
<EditText 
	android:id="@+id/audiobookTitle"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex Theory of Pumpkins: an investigative study"
	/>
	
	

	
<TextView 
	android:id="@+id/tasknotesLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="TODOs, Tasks, Notes:"
	/>	
<EditText 
	android:id="@+id/tasknotes"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint=""
	/>	
	
	


<TextView 
	android:id="@+id/audiobookfileNameLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Audiobook's Filename:"
	/>	
<EditText 
	android:id="@+id/audiobookFileName"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex Adams-2000-Theory of pumpkins.pdf"
	/>

<TextView 
	android:id="@+id/audiobookfilePathLabel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Chunk's Full Path and Filename:"
	/>	
<EditText 
	android:id="@+id/ChunkFullFilePathandFileName"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="ex /sdcard/Music/Adams-2000-Theory of pumpkins/Section3.1-Adams-2000-Theory of pumpkins.mp3"
	/>

	


	
</LinearLayout>
</ScrollView>